<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:ContactsAgenda.Models"
        x:Class="ContactsAgenda.Views.MainWindow"
        Title="Agenda de Contactos"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="📒 Agenda de Contactos" 
                   FontSize="24" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Panel de Entrada -->
        <Border Grid.Row="1" 
                Background="#F0F0F0" 
                CornerRadius="10" 
                Padding="15"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Agregar Nuevo Contacto" 
                           FontWeight="SemiBold" 
                           FontSize="16"
                           Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Column="0" 
                             Name="txtNombre"
                             Watermark="Nombre"
                             Margin="0,0,5,0"/>
                    
                    <TextBox Grid.Column="1" 
                             Name="txtTelefono"
                             Watermark="Teléfono"
                             Margin="5,0,5,0"/>
                    
                    <TextBox Grid.Column="2" 
                             Name="txtEmail"
                             Watermark="Email"
                             Margin="5,0,10,0"/>
                    
                    <Button Grid.Column="3" 
                            Name="btnAgregar"
                            Content="➕ Agregar"
                            Click="OnAgregarClick"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="15,5"/>

                    <!-- Búsqueda -->
                    <TextBox Grid.Row="1" 
                             Grid.Column="0" 
                             Grid.ColumnSpan="3"
                             Name="txtBuscar"
                             Watermark="🔍 Buscar por nombre o teléfono..."
                             Margin="0,10,10,0"/>
                    
                    <Button Grid.Row="1" 
                            Grid.Column="3" 
                            Name="btnBuscar"
                            Content="🔍 Buscar"
                            Click="OnBuscarClick"
                            Margin="0,10,0,0"
                            Padding="15,5"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Lista de Contactos -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="#2196F3" 
                        CornerRadius="10,10,0,0"
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="Lista de Contactos" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="14"/>
                        
                        <TextBlock Grid.Column="1"
                                   Name="lblContador"
                                   Text="Total: 0"
                                   Foreground="White"
                                   FontSize="12"/>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto">
                    <ListBox Name="lstContactos"
                             Margin="10"
                             SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="models:Contact">
                                <Border Background="#F8F8F8" 
                                        CornerRadius="5" 
                                        Padding="10" 
                                        Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="Bold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding Phone}" 
                                                       Foreground="#666"
                                                       FontSize="12"/>
                                            <TextBlock Text="{Binding Email}" 
                                                       Foreground="#888"
                                                       FontSize="11"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="1"
                                                Content="🗑️"
                                                Click="OnEliminarClick"
                                                CommandParameter="{Binding Name}"
                                                Background="#F44336"
                                                Foreground="White"
                                                Padding="8,4"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Botones de Acción -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <Button Name="btnMostrarTodos"
                    Content="📋 Mostrar Todos"
                    Click="OnMostrarTodosClick"
                    Margin="5,0"
                    Padding="15,8"/>
            
            <Button Name="btnLimpiarBusqueda"
                    Content="🔄 Limpiar Búsqueda"
                    Click="OnLimpiarBusquedaClick"
                    Margin="5,0"
                    Padding="15,8"/>
            
            <Button Name="btnLimpiarCampos"
                    Content="🧹 Limpiar Campos"
                    Click="OnLimpiarCamposClick"
                    Margin="5,0"
                    Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>